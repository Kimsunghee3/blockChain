{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist",
        "target": "ES6",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@board/*": ["board/*"],
            "@comment/*": ["comment/*"]
        }
    },
    "include": [
        "src/**/*", 
        "__tests__",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
}